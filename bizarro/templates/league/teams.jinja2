{% extends "templates/league/base.jinja2" %}
{% block extrahead %}
<link rel="stylesheet" href="/static/css/league/teams.css" />
{% endblock %}
{% block league_content %}
{% for conference in conferences %}
<div id="conferences">
<div class='conference'>
  <h2>{{conference.abbr}}</h2>
  {% for division in conference.divisions %}
    <h3>{{division}}</h3>
    {% for team in division.teams|sort(attribute='abbr') %}
    <ul class="division">
      <li><a href="{{team.url()}}">{{team.full_name}}</a></li>
      {% for team_link in team_links %}
      <li>
        <a href="{{team.url()}}{{team_link}}/">{{team_link|replace('_',' ')}}</a>
      </li>
      {% endfor %}
    </ul>
    {% endfor %}
  {% endfor %}
</div>
</div>
{% endfor %}
{% endblock %}
