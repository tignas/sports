{% block javascript %}
<script>
$(document).ready(function () {
var datepicker = $("#datepicker").datepicker({
    changeYear: true,
    onSelect: function (date){
        var data = {
            'date': date
        };
        var req = $.get( '', data, function(response) {
                $('#scores').html(response);
            })
    }})
});
</script>
{% endblock %}

