{% extends "templates/base.jinja2" %}
{% block title %}
  {{game.away_team.abbr}}@{{game.home_team.abbr}}
{% endblock %}
{% block content %}
<h1><a href="{{game.away_team.url()}}">{{game.away_team}}</a> @ <a href="{{game.home_team.url()}}">{{game.home_team}}</a></h1>
<h2>{{game.game_time.strftime('%B %d, %Y - %I:%M%p').replace(' 0', ' ')}}</h2>
{% set game_links = ['boxscore', 'plays', 'shots'] %}
<ul>
  {% for link in game_links %}
    {% if link == page %}
      {% set class = 'active' %}
    {% else %}
      {% set class = 'inactive' %}
    {% endif %}
    <li><a href="{{game.url()}}/{{link}}" class="{class}}">{{link}}</a>
  {% endfor %}
</ul>
<div id="game_content">
{% block game_content %}{% endblock %}
</div>
{% endblock %}

