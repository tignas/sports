      <label id="{{cat}}">{{cat.replace('attempts', 'att').replace('completions', 'comp').replace('touchdown', 'td').replace('yard', 'yd').replace('interception', 'int').replace('reception', 'rec')}}:</label>
      <input id="{{cat}}" type="number" step="any" value="{{val}}" 
             class="scoring" name="{{cat}}"/>
    </li>
    {% endfor %}
    </ul>
    </fieldset>
{% endfor %}
{% for scoring_type, values in league_info['scoring'].items() %}
  <fieldset id=="{{scoring_type}}>
  <legend>{{scoring_type}}</legend>
  <ul>
  {% for category, value in values.iteritems() %}
    <li>
