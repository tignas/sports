{% extends "templates/teams/base.jinja2" %}
{% block team_content %}

{% include "templates/widgets/game_type_picker.jinja2" %}
{% include "templates/widgets/season_picker.jinja2" %}

<div id="games">
{% include "templates/teams/schedule_table.jinja2" %}
</div>
{% endblock %}
{% block javascript %}
<script>
$(document).ready(function () {
var season = {{season}}
var game_type = "{{game_type}}"
var data = {
    'season': season,
    'game_type': game_type
}
$('#season').on('change', function () {
    data['season'] = $(this).val();
    $.get('', data, function(response) {
        $('#games').html(response);
    });
});
$('#game_type').on('change', function () {
    data['game_type'] = $(this).val();
    $.get('', data, function(response) {
        $('#games').html(response);
    });
});
});
</script>
{% endblock %}
